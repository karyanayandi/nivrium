---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Header } from '@/components/react/Header';
import Hero from '@/components/astro/Hero.astro';
import Features from '@/components/astro/Features.astro';
import { ProductSection } from '@/components/react/ProductSection';
import Guarantee from '@/components/astro/Guarantee.astro';
import Footer from '@/components/astro/Footer.astro';
---

<BaseLayout>
  <div class="min-h-screen flex flex-col font-sans">
    <Header client:load />
    <main class="flex-grow">
      <Hero />
      <div class="bg-accent-red text-white text-center py-3 font-bold text-sm tracking-wide uppercase">
        Holiday Sale - 50% Off
      </div>
      <Features />
      <ProductSection client:load />
      <Guarantee />
    </main>
    <Footer />
  </div>
</BaseLayout>
