---
import { ShieldCheck, Star } from "lucide-react"

import { env } from "@/lib/env"

const heroTitle = env.hero.title
const heroSubtitle = env.hero.subtitle
const guaranteeDays = env.hero.guaranteeDays
const productRating = env.hero.productRating
const reviewCount = env.hero.reviewCount
---

<section
  class="relative overflow-hidden bg-gradient-to-b from-blue-50/80 to-transparent pt-16 pb-12"
>
  <div class="mx-auto max-w-4xl px-4 text-center">
    <!-- Badge -->
    <div
      class="animate-fade-in-up mb-8 inline-flex items-center gap-2 rounded-full border border-gray-200 bg-white px-4 py-1.5 shadow-sm"
    >
      <ShieldCheck className="text-primary h-4 w-4" />
      <span class="text-xs font-medium tracking-wide text-slate-600 uppercase"
        >{guaranteeDays} Day Satisfaction Guarantee</span
      >
    </div>

    <!-- Heading -->
    <h1 class="font-display mb-6 text-5xl leading-[1.1] text-slate-900 md:text-7xl">
      {heroTitle}
    </h1>

    <p class="mx-auto mb-8 max-w-2xl text-lg font-light text-slate-600 md:text-xl">
      {heroSubtitle}
    </p>

    <!-- Social Proof -->
    <div
      class="mb-10 flex flex-col items-center justify-center gap-3 text-sm md:flex-row md:text-base"
    >
      <div class="text-primary flex">
        {[...Array(5)].map(() => <Star size={20} fill="currentColor" className="text-primary" />)}
      </div>
      <div class="flex items-center gap-2">
        <span class="font-semibold text-slate-900">{productRating} out of 5 stars</span>
        <span class="text-gray-400">â€¢</span>
        <span
          class="hover:text-primary cursor-pointer underline decoration-gray-300 underline-offset-4 transition-colors"
          >{reviewCount.toLocaleString()} Reviews</span
        >
      </div>
    </div>

    <!-- CTA Slot -->
    <div id="hero-cta-slot"></div>
  </div>
</section>
