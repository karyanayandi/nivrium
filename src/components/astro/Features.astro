---
import { Zap, Sparkles, Scissors, Shield } from 'lucide-react';

const features = [
  { icon: Zap, title: '3x More Effective', subtitle: 'Than regular pimple patches' },
  { icon: Sparkles, title: 'Overnight Results', subtitle: 'Flattens acne & scars while you sleep' },
  { icon: Scissors, title: 'Custom Sizes', subtitle: 'Cut to any shape, no waste' },
  { icon: Shield, title: 'Enhances Skin Barrier', subtitle: 'Medical-grade, hypoallergenic' },
];
---

<section class="py-16 bg-white border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      {features.map(({ icon: Icon, title, subtitle }) => (
        <div class="flex flex-col items-center p-4">
          <div class="w-14 h-14 rounded-full bg-indigo-50 flex items-center justify-center mb-4 text-primary shadow-sm">
            <Icon size={24} />
          </div>
          <h3 class="font-bold text-slate-900 mb-1.5">{title}</h3>
          <p class="text-xs text-slate-500 max-w-[200px]">{subtitle}</p>
        </div>
      ))}
    </div>
  </div>
</section>
