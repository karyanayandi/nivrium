---
import { Scissors, Shield, Sparkles, Zap } from "lucide-react"

const features = [
  { icon: Zap, title: "3x More Effective", subtitle: "Than regular pimple patches" },
  { icon: Sparkles, title: "Overnight Results", subtitle: "Flattens acne & scars while you sleep" },
  { icon: Scissors, title: "Custom Sizes", subtitle: "Cut to any shape, no waste" },
  { icon: Shield, title: "Enhances Skin Barrier", subtitle: "Medical-grade, hypoallergenic" },
]
---

<section class="border-b border-gray-100 bg-white py-16">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 gap-8 text-center md:grid-cols-4">
      {
        features.map(({ icon: Icon, title, subtitle }) => (
          <div class="flex flex-col items-center p-4">
            <div class="mb-4 flex h-14 w-14 items-center justify-center rounded-full bg-indigo-50 text-primary shadow-sm">
              <Icon size={24} />
            </div>
            <h3 class="mb-1.5 font-bold text-slate-900">{title}</h3>
            <p class="max-w-[200px] text-xs text-slate-500">{subtitle}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
